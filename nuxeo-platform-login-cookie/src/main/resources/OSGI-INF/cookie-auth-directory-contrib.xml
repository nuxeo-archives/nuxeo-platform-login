<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.platform.ui.web.auth.cookie.directory">
	<require>org.nuxeo.ecm.platform.ui.web.auth.cookie.schema</require>
	<extension target="org.nuxeo.ecm.directory.sql.SQLDirectoryFactory"
		point="directories">
		<directory name="cookieAuths">
			<schema>cookieauth</schema>
			<dataSource>java:/nxsqldirectory</dataSource>
			<cacheTimeout>3600</cacheTimeout>
			<cacheMaxSize>1000</cacheMaxSize>
			<table>cookie_auth</table>
			<idField>token</idField>
			<autoincrementIdField>false</autoincrementIdField>
			<createTablePolicy>on_missing_columns</createTablePolicy>
		</directory>
	</extension>
</component>